---
layout: 'base.njk'
---

<div class="box-contenu-articles">
    <h1>
        {{ title }}
    </h1>
    <img src="{{ image }}" alt="{{ imageAlt }}">
    <div class="text-contenu-articles">
        {{ content | safe }}
    </div>
    <div class="baklinks">
        <a href="/pages/articles">
            Blog
        </a>
        <a href="/pages/{{ link }}/">
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                fill="currentColor"
                class="bi bi-tags"
                viewbox="0 0 16 16">
                <path d="M3 2v4.586l7 7L14.586 9l-7-7H3zM2 2a1 1 0 0 1 1-1h4.586a1 1 0 0 1 .707.293l7 7a1 1 0 0 1 0 1.414l-4.586 4.586a1 1 0 0
                    1-1.414 0l-7-7A1 1 0 0 1 2 6.586V2z"/>
                <path d="M5.5 5a.5.5 0 1 1 0-1 .5.5 0 0 1 0 1zm0 1a1.5 1.5 0 1 0 0-3 1.5 1.5 0 0 0 0 3zM1 7.086a1 1 0 0 0 .293.707L8.75
                15.25l-.043.043a1 1 0 0 1-1.414 0l-7-7A1 1 0 0 1 0 7.586V3a1 1 0 0 1 1-1v5.086z"/>
            </svg>
            {{ categorie }}
        </a>
    </div>
</div>
<style>
    .box-contenu-articles {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        max-width: 750px;
        margin: 0 auto;
        padding: 0.25rem;
    }
    .box-contenu-articles img {
        margin-top: 1.5rem;
        max-width: 700px;
        max-height: 350px;
        border-radius: 0.1rem;
    }
    .text-contenu-articles {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .baklinks {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }
    .baklinks a {
        display: flex;
        gap: 0.25rem;
        color: white;
    }
    @media(max-width: 500px) {
        .box-contenu-articles {
            gap: 0;
        }
        .box-contenu-articles img {
            width: 100%;
            height: 250px;
        }
    }
</style>