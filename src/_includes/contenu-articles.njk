<style>
    .box-contenu-articles {
        display: flex;
        flex-direction: column;
        gap: 0.25rem;
        max-width: 750px;
        margin: 0 auto;
        padding: 0.25rem;
    }
    .box-contenu-articles img {
        margin-top: 1.5rem;
        max-width: 700px;
        max-height: 350px;
        border-radius: 0.1rem;
    }
    .text-contenu-articles {
        margin-top: 1rem;
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }
    .baklinks {
        display: flex;
        gap: 1rem;
        margin-top: 2rem;
    }
    .baklinks a {
        display: flex;
        gap: 0.25rem;
    }
    @media(max-width: 500px) {
        .box-contenu-articles {
            gap: 0;
        }
        .box-contenu-articles img {
            width: 100%;
            height: 250px;
        }
    }
</style>